{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./types"],
    "allowArbitraryExtensions": true,
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
